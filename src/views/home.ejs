<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        table {
          border-collapse: collapse;
          width: 100%;
        }
        
        th, td {
          padding: 8px;
          text-align: left;
          border-bottom: 1px solid #ddd;
        }
        
        tr:hover {background-color: #ccc;}

        .table-container{
            padding: 10px 20px;
        }

        .title{
            font-size: 25px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <ul>
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/createPage">Create User</a></li>
    </ul>


    <div class="table-container">
        <div class="title">User table</div>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
            </tr>
            <% ListUsers.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.city %></td>
                </tr>
            <% }); %>
          </table>
    </div>  
</body>
</html>